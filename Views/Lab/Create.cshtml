@model MvcLabManager.Models.Lab

@{
    ViewData["Title"] = "Cadastrar laboratório";
}

<h1>Cadastrar laboratório</h1>

<form method="post" asp-action="Create" class="form">
    <div class="form-group">
        <label for="Name">Nome</label>
        <input type="text" asp-for="@Model.Name" id="Name" class="form-control">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Number">Número</label>
        <input type="text" asp-for="@Model.Number" id="Number" class="form-control">
        <span asp-validation-for="@Model.Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Block">Bloco</label>
        <input type="text" asp-for="@Model.Block" id="Block" class="form-control">
        <span asp-validation-for="@Model.Block" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Enviar" class="btn btn-success mt-2">
    </div>
</form>